{{define "title"}}{{.Journal.Title}} - {{end}}
{{define "content"}}
<article class="view">
    <h1>{{.Journal.Title}}</h1>
    <p class="date">
        Posted on {{.Journal.GetDate}}
        {{if .Container.Configuration.EnableEdit}}<p class="float-right"><a href="/{{.Journal.Slug}}/edit" class="button button-outline">Edit</a></p>{{end}}
    </p>
    <div class="content">
        {{.Journal.Content}}
    </div>
</article>

{{if or .Next.ID .Prev.ID}}
    <nav class="prev-next">
        <div class="prev">
            {{if .Prev.ID}}
                <span>Previous</span>
                <a href="/{{.Prev.Slug}}">{{.Prev.Title}}</a>
            {{end}}
        </div>
        <div class="next">
            {{if .Next.ID}}
                <span>Next</span>
                <a href="/{{.Next.Slug}}">{{.Next.Title}}</a>
            {{end}}
        </div>
    </nav>
{{end}}
{{end}}
